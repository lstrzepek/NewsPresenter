<Window x:Class="EtherSoftware.NewsPresenter.View.Component.CategoryWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="CategoryWindow" Height="120" Width="340">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="11*" />
            <ColumnDefinition Width="51*" />
            <ColumnDefinition Width="88*" />
            <ColumnDefinition Width="75*" />
            <ColumnDefinition Width="10*" />
            <ColumnDefinition Width="75*" />
            <ColumnDefinition Width="10*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="14" />
            <RowDefinition Height="26" />
            <RowDefinition Height="17.515*" />
            <RowDefinition Height="26" />
            <RowDefinition Height="13" />
        </Grid.RowDefinitions>
        <Label Margin="0,1.391,0,0" Name="nameLabel" Grid.Column="1" Grid.Row="1">Name:</Label>
        <TextBox Margin="0,1.391,0,0" Name="nameValue" Grid.Row="1" Grid.ColumnSpan="4" Grid.Column="2" TextChanged="nameValue_TextChanged" />
        <Button Grid.Row="3" Name="cancelButton" Grid.Column="5" IsCancel="True" Click="cancelButton_Click">Cancel</Button>
        <Button Grid.Row="3" Name="okButton" Grid.Column="3" IsEnabled="False" IsDefault="True" Click="okButton_Click">Ok</Button>
    </Grid>
</Window>
